{
    "manifest_version": 2,
    "name": "Ultra Adblocker",
    "version": "1.0.0",

    "description": "The ultra adblocker chrome extension",
    "icons": {
        "16": "assets/icons/icon16.png",
        "24": "assets/icons/icon24.png",
        "32": "assets/icons/icon32.png",
        "64": "assets/icons/icon64.png",
        "128": "assets/icons/icon128.png"
    },
    "browser_action": {
        "default_icon": {
            "16": "assets/icons/icon16.png",
            "24": "assets/icons/icon24.png",
            "32": "assets/icons/icon32.png",
            "64": "assets/icons/icon64.png",
            "128": "assets/icons/icon128.png"
        },
        "default_title": "Ultra Adblocker",
        "default_popup": "index.html"
    },
    "background": {
        "scripts": [
            "dist/js/main.js"
        ],
        "persistent": true
    },
    "permissions": [
        "webRequest",
        "tabs",
        "storage",
        "webRequestBlocking",
        "<all_urls>"
    ]
}